{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "node_modules/@types/node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test", "**/*spec.ts"]
}
